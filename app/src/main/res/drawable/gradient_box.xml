<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_background"/>
            <corners android:radius="16dp"/>
            <stroke android:width="4dp" android:color="@color/neon_purple"/>
        </shape>
    </item>

    <!-- Inner gradient -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#6A00F4"
                android:endColor="#A020F0"
                android:type="linear"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>
