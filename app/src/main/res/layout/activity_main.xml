<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity"
    android:padding="16dp">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/loading_dots"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:layout_constraintTop_toBottomOf="@id/translateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Translator"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>



    <!-- Input Text Box with Buttons -->
    <FrameLayout
        android:id="@+id/inputContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp">

        <!-- Input Text Box -->
        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter text to translate..."
            android:textColorHint="@color/text_white"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/gradient_output"
            android:padding="16dp"
            android:gravity="top|start"
            android:maxLines="6"
            android:scrollbars="vertical"/>

        <!-- Button Row (Mic & Speaker) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Microphone Button -->
<!--            <ImageButton-->
<!--                android:id="@+id/inputMicButton"-->
<!--                android:layout_width="48dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:background="@drawable/ripple_circle"-->
<!--                android:src="@drawable/ic_microphone"-->
<!--                android:padding="8dp"-->
<!--                android:contentDescription="Voice Input"/>-->

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <!-- Speaker Button -->
            <ImageButton
                android:id="@+id/inputSpeakerButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ripple_circle"
                android:src="@drawable/ic_speaker"
                android:padding="8dp"
                android:contentDescription="Play Input Text"/>
        </LinearLayout>
    </FrameLayout>





    <!-- Translate Button -->
    <Button
        android:id="@+id/translateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/ripple_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





    <!-- Output Text Box (Translated Text) -->

    <FrameLayout
        android:id="@+id/outputContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/translateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Translated Output Text -->
        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Translation will appear here..."
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_output"
            android:padding="16dp"
            android:gravity="top|start"
            android:maxLines="6"
            android:scrollbars="vertical"/>

        <!-- Button Row (Speaker & Copy) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Copy Button -->
            <ImageButton
                android:id="@+id/copyButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ripple_circle"
                android:src="@drawable/ic_copy"
                android:padding="8dp"
                android:contentDescription="Copy Translation"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>


            <!-- Speaker Button -->
            <ImageButton
                android:id="@+id/speakerButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ripple_circle"
                android:src="@drawable/ic_speaker"
                android:padding="8dp"
                android:contentDescription="Play Translation"/>
        </LinearLayout>

    </FrameLayout>




    <!-- Speaker & Voice Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outputContainer">

<!--        <ImageButton-->
<!--            android:id="@+id/micButton"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:background="@drawable/ripple_circle"-->
<!--            android:contentDescription="Voice Input"-->
<!--            android:padding="12dp"-->
<!--            android:src="@drawable/ic_microphone" />-->

        <Space
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/targetLanguageButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ripple_button"
            android:text="Select Language"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/outputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>




        <Space
            android:layout_width="16dp"
            android:layout_height="1dp" />

<!--        <ImageButton-->
<!--            android:id="@+id/speakerButton"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:background="@drawable/ripple_circle"-->
<!--            android:contentDescription="Play Translation"-->
<!--            android:padding="12dp"-->
<!--            android:src="@drawable/ic_speaker" />-->
    </LinearLayout>


    <!-- Footer with 3 Buttons -->
    <LinearLayout
        android:id="@+id/footerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/dark_background">

        <!-- Chat/Microphone Button -->
        <ImageButton
            android:id="@+id/chatButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/ic_microphone"
            android:padding="12dp"
            android:contentDescription="Chat with Voice"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="1dp"/>

        <!-- Camera Button (Bigger & Circular) -->
        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/ic_camera"
            android:padding="16dp"
            android:contentDescription="Camera Translation"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="1dp"/>

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/ic_settings"
            android:padding="12dp"
            android:contentDescription="Settings"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
