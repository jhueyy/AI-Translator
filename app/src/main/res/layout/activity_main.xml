<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".MainActivity"
    android:padding="16dp">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/loading_dots"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:layout_constraintTop_toBottomOf="@id/translateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>



    <!-- Input Text Box -->
    <EditText
        android:id="@+id/inputText"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:hint="Enter text to translate..."
        android:textColorHint="@color/text_white"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/gradient_output"
        android:padding="16dp"
        android:gravity="top|start"
        android:maxLines="6"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>


    <!-- Translate Button -->
    <Button
        android:id="@+id/translateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/ripple_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





    <!-- Output Text Box (Translated Text) -->
    <FrameLayout
        android:id="@+id/outputContainer"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/translateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Translated Output Text Box -->
        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Translation will appear here..."
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_output"
            android:padding="16dp"
            android:gravity="top|start"
            android:maxLines="6"
            android:scrollbars="vertical"/>

        <!-- Copy Button Inside Output Box (Bottom-Right) -->
        <ImageButton
            android:id="@+id/copyButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/ic_copy"
            android:padding="8dp"
            android:contentDescription="Copy Translation"/>
    </FrameLayout>



    <!-- Speaker & Voice Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outputContainer">

        <ImageButton
            android:id="@+id/micButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ripple_circle"
            android:contentDescription="Voice Input"
            android:padding="12dp"
            android:src="@drawable/ic_microphone" />

        <Space
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <Spinner
            android:id="@+id/targetLanguageSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ripple_button"
            android:popupBackground="@drawable/rounded_spinner_dropdown"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/text_white"
            android:overlapAnchor="false"/>



        <Space
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/speakerButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ripple_circle"
            android:contentDescription="Play Translation"
            android:padding="12dp"
            android:src="@drawable/ic_speaker" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
